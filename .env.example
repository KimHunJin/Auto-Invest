# Upbit API 키 설정
# https://upbit.com/mypage/open_api_management 에서 발급 받으세요
UPBIT_ACCESS_KEY=your_access_key_here
UPBIT_SECRET_KEY=your_secret_key_here

# 거래 설정
TRADE_MODE=test  # test 또는 live
TRADE_INTERVAL=60000  # 거래 체크 간격 (밀리초, 기본: 60초)

# 투자 설정
INVESTMENT_AMOUNT=10000  # 1회 투자 금액 (KRW)
TARGET_MARKETS=KRW-BTC,KRW-ETH  # 거래할 마켓 (쉼표로 구분)

# 로깅 설정
LOG_LEVEL=info  # debug, info, warn, error
LOG_TO_FILE=true  # 파일 로깅 활성화

# 전략 설정
STRATEGY=simple  # 사용할 투자 전략
